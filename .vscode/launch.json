{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "test_wurun.py",
                "-v"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Debug Single Test",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "test_wurun.py::${input:testName}",
                "-v",
                "-s"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env"
        }
    ],
    "inputs": [
        {
            "id": "testName",
            "description": "Test function name",
            "default": "test_setup_and_close",
            "type": "promptString"
        }
    ]
}